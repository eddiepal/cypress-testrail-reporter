{
  "extends": [
    "./node_modules/gts/",
    "plugin:mocha/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "max-len": ["error", {"code": 120}],
    "linebreak-style": ["error", "windows"],
    "prettier/prettier": 0,
    "spaced-comment": ["error", "always"],
    "node/no-unpublished-import": ["error", {
      "allowModules": ["chai"]
    }]
  },
  "overrides": [
    {
        "files": ["test/**/*.js"],
        "rules": {
          "prefer-arrow-callback": "off"
        }
    }
]
}
